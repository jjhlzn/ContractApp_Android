<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>



    <style name="basicInfoRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="basicInfoRow.name">
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="searchFormRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:weightSum">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="searchFormRow.name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="searchFormRow.value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.75</item>
        <item name="android:gravity">center_vertical|left</item>

    </style>


    <style name="searchFormRowButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:weightSum">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">30dp</item>

    </style>


    <style name="approvalDetailRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="approvalDetailRow.name">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="approvalDetailRowButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:weightSum">1</item>

        <item name="android:layout_marginTop">20dp</item>

    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#5164f1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">0.09</item>
    </style>


    <style name="loginRow">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">0.87</item>

    </style>

    <style name="myInfoRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="myInfoRow.name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="myInfoRow.value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:gravity">left</item>
    </style>



    <style name="productRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="productRow.name">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="productRow.value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="commonRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="commonRow.name">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="commonRow.value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
    </style>



<!-- ################################################################################### -->

    <style name="BB_BottomBarItem_Fixed">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>

        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="BB_BottomBarItem_Fixed.Title" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">11sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="BB_BottomBarItem_Shifting">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="BB_BottomBarItem_Shifting.Title" parent="BB_BottomBarItem_Fixed.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="BB_BottomBarItem_Tablet">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BB_BottomBarBadge_Text" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">#FFFFFF</item>
    </style>


</resources>
