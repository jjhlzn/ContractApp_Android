<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >
    <LinearLayout
        style="@style/searchFormRow">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:text="@string/search_approval_keyword"/>

        <EditText
            android:id="@+id/search_approval_keyword"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.89"
            android:lines="1"/>

    </LinearLayout>

    <LinearLayout
        style="@style/searchFormRow">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:text="@string/search_approval_startDate"
            />

        <Button
            android:id="@+id/search_approval_startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|center"
            android:layout_weight="0.44"/>
    </LinearLayout>


    <LinearLayout
        style="@style/searchFormRow">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/search_approval_endDate"
            />

        <Button
            android:id="@+id/search_approval_endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|center"
            android:layout_weight="0.44"/>
    </LinearLayout>

    <LinearLayout
        style="@style/searchFormRow">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/search_approval_unapproved"
            />

        <ToggleButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="New ToggleButton"
            android:id="@+id/search_approval_unapproved"
            android:checked="true"
            android:buttonTint="#0e42ee"
            />

    </LinearLayout>


    <LinearLayout
        style="@style/searchFormRow">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="right"

            android:text="@string/search_approval_approved"
            />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="New ToggleButton"
            android:id="@+id/search_approval_approved"/>
    </LinearLayout>

    <LinearLayout
        style="@style/searchFormRowButton">
        <Button
            android:id="@+id/search_approval_searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_approval_searchButton"
            android:background="#5164f1"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_weight="0.09"/>
    </LinearLayout>




</LinearLayout>
