<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <LinearLayout
        style="@style/searchFormRow">
        <TextView
            style="@style/searchFormRow.name"
            android:text="@string/search_order_keyword"/>

        <EditText
            android:id="@+id/search_order_keyword"
            style="@style/searchFormRow.value"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical|left"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:background="@drawable/rounded_edittext"
            android:textCursorDrawable="@null"
            android:lines="1"
            android:inputType="text"/>

    </LinearLayout>

    <LinearLayout
        style="@style/searchFormRow">

        <TextView
            style="@style/searchFormRow.name"
            android:text="@string/search_order_startDate"/>

        <RelativeLayout
            style="@style/searchFormRow.value"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/search_order_startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center"/>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        style="@style/searchFormRow">

        <TextView
            style="@style/searchFormRow.name"
            android:text="@string/search_order_endDate"
            />

        <RelativeLayout
            style="@style/searchFormRow.value"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/search_order_endDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/search_order_searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_order_searchButton"
            android:background="#5164f1"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_weight="0.09"/>
    </LinearLayout>




</LinearLayout>
