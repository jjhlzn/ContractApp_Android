<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/approval_list_item_approvalObject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.2"
            android:textSize="10sp"
            android:gravity="center_vertical|left"
            android:text="Order_object"/>


        <TextView
            android:id="@+id/approval_list_item_reporter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="0.8"
            android:textSize="10sp"
            android:text="Order_reporter"
            android:gravity="center_vertical|left"/>


        <TextView
            android:id="@+id/approval_list_item_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="0.8"
            android:textSize="10sp"
            android:text="Order_status"
            android:gravity="center_vertical|right"/>

        <TextView
            android:id="@+id/approval_list_item_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1.2"
            android:textSize="10sp"
            android:text="Order_amount"
            android:gravity="center_vertical|right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/approval_list_item_keyword"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.2"
            android:textSize="10sp"
            android:gravity="center_vertical|left"
            android:text="Order_keyword"/>


        <TextView
            android:id="@+id/approval_list_item_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="0.8"
            android:textSize="10sp"
            android:gravity="center_vertical|left"
            android:text="Order_type"/>


        <TextView
            android:id="@+id/approval_list_item_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:textSize="10sp"
            android:text="Order_date"

            android:gravity="center_vertical|right"
            android:textColor="#ae212121"/>
    </LinearLayout>


</LinearLayout>
