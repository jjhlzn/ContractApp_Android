<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#d3d3d3"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:paddingTop="30dp"
        android:orientation="vertical"
        android:gravity="center|center_vertical"
        android:background="@color/white"
        >


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="0dp"
            android:layout_gravity="center"
            android:src="@drawable/bigusericon"/>

        <TextView
            android:id="@+id/myinfo_name"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:background="@color/white">
        <LinearLayout
            style="@style/myInfoRow"
            >
            <TextView
                style="@style/myInfoRow.name"
                android:text="@string/myinfo_username"/>

            <TextView
                android:id="@+id/myinfo_userName"
                style="@style/myInfoRow.value"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            style="@style/myInfoRow">

            <TextView
                style="@style/myInfoRow.name"
                android:text="@string/myinfo_department"
                />

            <TextView
                android:id="@+id/myinfo_department"
                style="@style/myInfoRow.value"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            style="@style/myInfoRow">

            <TextView
                style="@style/myInfoRow.name"
                android:text="@string/myinfo_version"
                />

            <TextView
                android:id="@+id/myinfo_version"
                style="@style/myInfoRow.value"/>
        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        >
        <Button
            android:id="@+id/myinfo_logoutButton"

            android:text="@string/myinfo_logoutbutton"

            style="@style/buttonStyle"
            android:layout_weight="0.9"/>
    </LinearLayout>




</LinearLayout>
